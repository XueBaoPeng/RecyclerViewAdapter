<resources>
    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DialogAnimationFromBottom" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="DialogAnimationFromCenterOfScale" parent="Animation.AppCompat.Dialog">
        <item name="@android:windowEnterAnimation">@anim/dialog_a</item>
        <item name="@android:windowExitAnimation">@anim/dialog_b</item>
    </style>
</resources>
